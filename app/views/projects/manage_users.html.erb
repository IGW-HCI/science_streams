<div class="container-narrow">
  <h1>Invite some users to <%= @model.title %></h1>

  <%= simple_form_for @form, url: manage_users_project_path, method: :post, html: { class: "form-horizontal" } do |f| %>
    <div id="users">
      <%= f.simple_fields_for :users  do |users| %>
        <%= render "projects/form/user_fields", f: users %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add User', f, :users, partial: "projects/form/user_fields" %>
      </div>
    </div>
    <%= f.submit %>
  <% end %>
</div>
